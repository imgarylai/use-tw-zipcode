{
  "automerge": true,
  "automergeStrategy": "rebase",
  "extends": ["config:base"],
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "groupName": "node",
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "non-major dependencies",
      "automerge": true,
      "schedule": ["every weekend"]
    }
  ]
}
