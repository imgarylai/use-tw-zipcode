{
  "name": "use-tw-zipcode",
  "version": "2.1.0",
  "description": "React hook for getting Taiwan zip code.",
  "license": "MIT",
  "author": "Gary Lai <garylai1990@gmail.com>",
  "homepage": "https://github.com/imgarylai/use-tw-zipcode#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imgarylai/use-tw-zipcode"
  },
  "bugs": {
    "url": "https://github.com/imgarylai/use-tw-zipcode/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "scripts": {
    "build": "microbundle",
    "commit": "git-cz",
    "dev": "microbundle watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test": "jest --coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "types": "dist/index.d.ts",
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "babel-jest": "^30.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "husky": "^9.0.11",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "30.2.0",
    "lint-staged": "16.2.7",
    "microbundle": "^0.15.1",
    "prettier": "^3.2.5",
    "prettier-package-json": "2.8.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "semantic-release": "^25.0.0",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "hook",
    "react",
    "taiwan"
  ],
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "tests/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.config.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  },
  "source": "src/index.ts",
  "unpkg": "dist/index.umd.js"
}
